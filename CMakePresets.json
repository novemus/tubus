{
    "version": 6,
    "configurePresets": [
        {
            "name": "config-base",
            "hidden": true,
            "displayName": "Basic",
            "description": "Basic Configure Preset",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "TUBUS_SKIP_TEST_RULES": "OFF",
                "TUBUS_SKIP_INSTALL_RULES": "OFF",
                "TUBUS_SKIP_PACKAGE_RULES": "OFF",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install"
            }
        },
        {
            "name": "windows-shared",
            "displayName": "Shared",
            "description": "Configure shared build context",
            "inherits": "config-base",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "windows-static",
            "displayName": "Static",
            "description": "Configure static build context",
            "inherits": "config-base",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "linux-shared-debug",
            "displayName": "Shared (Debug)",
            "description": "Configure shared Debug build context",
            "inherits": "config-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_SHARED_LIBS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-shared-release",
            "displayName": "Shared (Release)",
            "description": "Configure shared Release build context",
            "inherits": "config-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_SHARED_LIBS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-static-debug",
            "displayName": "Static (Debug)",
            "description": "Configure static Debug build context",
            "inherits": "config-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_SHARED_LIBS": "OFF"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-static-release",
            "displayName": "Static (Release)",
            "description": "Configure static Release build context",
            "inherits": "config-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_SHARED_LIBS": "OFF"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-shared-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "windows-shared"
        },
        {
            "name": "windows-shared-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "windows-shared"
        },
        {
            "name": "windows-static-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "windows-static"
        },
        {
            "name": "windows-static-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "windows-static"
        },
        {
            "name": "linux-shared-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "linux-shared-debug"
        },
        {
            "name": "linux-static-debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "linux-static-debug"
        },
        {
            "name": "linux-shared-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "linux-shared-release"
        },
        {
            "name": "linux-static-release",
            "displayName": "Release",
            "configuration": "Release",
            "configurePreset": "linux-static-release"
        }
    ],
    "testPresets": [
        {
            "name": "test-base",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            },
            "hidden": true
        },
        {
            "name": "linux-static-release",
            "displayName": "Test",
            "description": "All project tests",
            "configurePreset": "linux-static-release",
            "inherits": "test-base"
        },
        {
            "name": "linux-static-debug",
            "displayName": "Test",
            "description": "All project tests",
            "configurePreset": "linux-static-debug",
            "inherits": "test-base"
        },
        {
            "name": "linux-shared-release",
            "displayName": "Test",
            "description": "All project tests",
            "configurePreset": "linux-shared-release",
            "inherits": "test-base"
        },
        {
            "name": "linux-shared-debug",
            "displayName": "Test",
            "description": "All project tests",
            "configurePreset": "linux-shared-debug",
            "inherits": "test-base"
        },
        {
            "name": "windows-static-release",
            "configurePreset": "windows-static",
            "displayName": "Test (Release)",
            "description": "All project tests",
            "configuration": "Release",
            "inherits": "test-base"
        },
        {
            "name": "windows-static-debug",
            "configurePreset": "windows-static",
            "displayName": "Test (Debug)",
            "description": "All project tests",
            "configuration": "Debug",
            "inherits": "test-base"
        },
        {
            "name": "windows-shared-release",
            "configurePreset": "windows-shared",
            "displayName": "Test (Release)",
            "description": "All project tests",
            "configuration": "Release",
            "inherits": "test-base"
        },
        {
            "name": "windows-shared-debug",
            "configurePreset": "windows-shared",
            "displayName": "Test (Debug)",
            "description": "All project tests",
            "configuration": "Debug",
            "inherits": "test-base"
        }
    ],
    "packagePresets": [
        {
            "name": "debian-package-lib",
            "displayName": "libtubus (DEB)",
            "description": "Debian library package",
            "configurePreset": "linux-shared-release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "DEB"
            ],
            "configurations": [
                "Release",
                "Debug"
            ],
            "variables": {
                "CPACK_PACKAGING_INSTALL_PREFIX": "/opt",
                "CPACK_DEBIAN_PACKAGE_RELEASE": "1",
                "CPACK_DEBIAN_PACKAGE_MAINTAINER": "Community",
                "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "The 'tubus' library runtime",
                "CPACK_PACKAGE_DESCRIPTION": "This library implements a self obfuscated streaming transport\nprotocol based on UDP.",
                "CPACK_COMPONENTS_ALL": "library_files;lib_doc_files",
                "CPACK_DEBIAN_FILE_NAME": "DEB-DEFAULT",
                "CPACK_DEBIAN_PACKAGE_SHLIBDEPS": "ON",
                "CPACK_DEBIAN_PACKAGE_GENERATE_SHLIBS": "ON",
                "CPACK_DEBIAN_DEBUGINFO_PACKAGE": "ON",
                "CPACK_DEB_COMPONENT_INSTALL": "ON",
                "CPACK_COMPONENTS_ALL_IN_ONE_PACKAGE": "ON"
            },
            "packageName": "libtubus",
            "packageDirectory": ".."
        },
        {
            "name": "debian-package-dev",
            "displayName": "libtubus-dev (DEB)",
            "description": "Debian development package",
            "configurePreset": "linux-static-release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "generators": [
                "DEB"
            ],
            "configurations": [
                "Release",
                "Debug"
            ],
            "variables": {
                "CPACK_PACKAGING_INSTALL_PREFIX": "/opt",
                "CPACK_DEBIAN_PACKAGE_RELEASE": "1",
                "CPACK_DEBIAN_PACKAGE_MAINTAINER": "Community",
                "CPACK_DEBIAN_PACKAGE_DEPENDS": "libboost-dev (>= 1.74) | libboost1.81-dev, libtubus (= 1.2.2-1)",
                "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "Development files of the 'tubus' library",
                "CPACK_PACKAGE_DESCRIPTION": "This library provides a C++ implementation of a self obfuscated streaming\ntransport protocol based on UDP.",
                "CPACK_COMPONENTS_ALL": "archive_files;header_files;cmake_files;dev_doc_files",
                "CPACK_DEBIAN_FILE_NAME": "DEB-DEFAULT",
                "CPACK_DEBIAN_PACKAGE_SHLIBDEPS": "ON",
                "CPACK_DEBIAN_PACKAGE_GENERATE_SHLIBS": "ON",
                "CPACK_DEBIAN_DEBUGINFO_PACKAGE": "ON",
                "CPACK_DEB_COMPONENT_INSTALL": "ON",
                "CPACK_COMPONENTS_ALL_IN_ONE_PACKAGE": "ON"
            },
            "packageName": "libtubus-dev",
            "packageDirectory": ".."
        },
        {
            "name": "windows-archive",
            "displayName": "Archive (ZIP)",
            "description": "Portable ZIP archive",
            "configurePreset": "windows-static",
            "generators": [
                "ZIP"
            ],
            "configurations": [
                "Release",
                "Debug"
            ],
            "variables": {
                "CPACK_COMPONENTS_ALL": "runtime_files;library_files;archive_files;header_files;cmake_files;lib_doc_files;pdb_files",
                "CPACK_ARCHIVE_COMPONENT_INSTALL": "ON",
                "CPACK_COMPONENTS_ALL_IN_ONE_PACKAGE": "ON"
            },
            "packageName": "tubus",
            "packageDirectory": ".."
        }
    ],
    "workflowPresets": [
        {
            "name": "windows-archive",
            "displayName": "Archive (ZIP)",
            "description": "Portable ZIP archive",
            "steps": [
                {
                    "type": "configure",
                    "name": "windows-static"
                },
                {
                    "type": "build",
                    "name": "windows-static-release"
                },
                {
                    "type": "build",
                    "name": "windows-static-debug"
                },
                {
                    "type": "test",
                    "name": "windows-static-release"
                },
                {
                    "type": "package",
                    "name": "windows-archive"
                }
            ]
        },
        {
            "name": "debian-package-lib",
            "displayName": "Package (Lib)",
            "description": "Debian library package",
            "steps": [
                {
                    "type": "configure",
                    "name": "linux-shared-release"
                },
                {
                    "type": "build",
                    "name": "linux-shared-release"
                },
                {
                    "type": "test",
                    "name": "linux-shared-release"
                },
                {
                    "type": "package",
                    "name": "debian-package-lib"
                }
            ]
        },
        {
            "name": "debian-package-dev",
            "displayName": "Package (Dev)",
            "description": "Debian development package",
            "steps": [
                {
                    "type": "configure",
                    "name": "linux-static-release"
                },
                {
                    "type": "build",
                    "name": "linux-static-release"
                },
                {
                    "type": "test",
                    "name": "linux-static-release"
                },
                {
                    "type": "package",
                    "name": "debian-package-dev"
                }
            ]
        }
    ]
}
